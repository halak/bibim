<Window x:Class="Halak.Bibim.Toolkit.Workbench.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConsoleWindow" Height="369" Width="673">
    <Grid>
        <RichTextBox Margin="12,12,12,34" Name="consoleTextBox" FontFamily="Courier New" Background="White" VerticalScrollBarVisibility="Visible" IsReadOnlyCaretVisible="True" IsReadOnly="True" />
        <CheckBox Content="프로그램이 끝나면 자동 종료" Margin="0,0,12,12" Name="checkBoxExit" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="174" Foreground="Black"></CheckBox>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE8FFFF" Offset="0" />
                <GradientStop Color="White" Offset="1" />
                <GradientStop Color="White" Offset="0.535" />
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
